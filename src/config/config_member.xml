<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<!-- 회원관련 -->
	<package name="member" extends="struts-default, tiles-default">
		<!-- 회원가입 폼 -->
		<action name="memberJoinForm" class="member.MemberJoinAction" method="form">
			<result>/member/memberLogin.jsp</result>
		</action>
		
		<!-- 로그인 폼 -->
		<action name="memberLoginForm" class="member.MemberLoginAction" method="form">
			<result>member/membeLoginForm.jsp</result>
		</action>
		
		<action name="memberLogin" class="member.MemberLoginAction">
			<result>member/membeLogin.jsp</result>
		</action>
	</package>

</struts>