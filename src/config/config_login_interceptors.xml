<?xml version="1.0" encoding="UTF-8"?>

<struts>
<package name="default" extends="struts-default">
        <interceptors>
                <interceptor class="member.LoginInterceptor" name="loginInterceptor">
                </interceptor>
                <interceptor-stack name="loginStack">
                        <interceptor-ref name="loginInterceptor" />
                        <interceptor-ref name="defaultStack" />
                </interceptor-stack>
        </interceptors>

        <!-- login action -->
        <action name="loginUser" class="member.LoginAction" method="login">
                <result name="success" type="redirect">homeAction</result>
                <result name="login">login.jsp</result>
        </action>

        <!-- home link action -->
        <action name="homeAction" class="member.LoginAction" method="home">
                <interceptor-ref name="loginStack" />
                <result name="login">login.jsp</result>
                <result name="success">home.jsp</result>
        </action>
        
        <!-- logout action -->
        <action name="logOut" class="com.action.LoginAction" method="logOut">
                <result>login.jsp</result>
        </action>
</package>
</struts>