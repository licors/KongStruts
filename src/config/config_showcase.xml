<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">      
    
<struts>
    <package name="showcase" namespace="/showcase" extends="struts-default, tiles-default">
        <action name="sclist" class="main.mainAction">
            <!--<result>/admin/qna/qnalist.jsp</result>-->
            <result type="tiles">test</result>
        </action>

        <!-- 쓰기폼 -->
        <action name="scwrite_form" class="admin.showcase.showcasewriteAction" method="form">
            <result>/admin/showcase/scawrite.jsp</result>	
        </action>
        
        <!-- 쓰기 -->
        <action name="scwrite" class="admin.showcase.showcasewriteAction">
            <result type="redirect-action">
                <param name="actionName">test</param>
            </result>	
            <!--<result type="tiles"></result>-->
        </action>
        
        <!-- 읽기 -->
        <action name="scread" class="showcase.ShowcaseReadAction">
            <!-- <result type="tiles">showcaseView</result> -->
            <result type="chain">
            	<param name="actionName">commentListAction</param>
            </result>
        </action>
        
        <action name="commentListAction" class="showcase.CommentListAction">
			<!-- <result>/showcase/listComment.jsp</result> -->
			<interceptor-ref name="chain"></interceptor-ref>
			<result type="tiles">showcaseView</result>
		</action>
		
<!-- 		<action name="commentWriteForm" class="showcase.CommentWriteAction" method="form">
			<result>/showcase/writeComment.jsp</result>
		</action> -->
		
		<action name="commentWriteAction" class="showcase.CommentWriteAction">
			<result type="redirect-action">
				<param name="actionName">commentListAction</param>
			</result>
		</action>
    </package>
    
</struts>