<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD Sql Map 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-2.dtd">
	
<sqlMap namespace="showcaseDetailComment">
	<typeAlias alias="comment" type="showcase.CommentBoardVO" />
	
	<resultMap id="commentRes" class="comment">
		<result property="comment_num" column="COMMENT_NUM" />
		<result property="showboard_num" column="SHOWBOARD_NUM" />
		<result property="member_num" column="MEMBER_NUM" />
		<result property="content" column="CONTENT" />
		<result property="reg_date" column="REG_DATE" />
		<result property="ref" column="REF"/>
		<result property="re_step" column="RE_STEP" />
		<result property="re_level" column="RE_LEVEL" />
	</resultMap> 

	<!-- 공통으로 사용할 select 절 정의 -->
	<sql id="select-all">
		SELECT * FROM SHOWCASECOMMENT
	</sql>

	<!-- 공통으로 사용할 where-no 절 정의 -->
	<sql id="where-num">
		WHERE COMMENT_NUM = #comment_num#
	</sql>
	
	<!-- select 쿼리문 정의 -->	
	<!-- 조인 사용 시 맵객체 사용하는 것 추천함 -->
	<!-- <select id="selectAll" resultMap="java.util.Map" parameterClass="int">
		SELECT cm.COMMENT_NUM, cm.SHOWBOARD_NUM, cm.MEMBER_NUM, cm.CONTENT, cm.REG_DATE, cm.RE_STEP, cm.RE_LEVEL, cm."REF", mb."NAME"
		FROM SHOWCASECOMMENT cm join MEMBER mb
		on cm.MEMBER_NUM = mb.MEMBER_NUM
		ORDER BY ref DESC, re_step ASC
	</select> -->
	
	<select id="selectAll" resultMap="commentRes" parameterClass="int">
		<include refid="select-all" />
		ORDER BY ref DESC, re_step ASC
	</select>
	
	<select id="selectOne" resultMap="commentRes" parameterClass="int">
		<include refid="select-all" />
		<include refid="where-num" />
	</select>

	<select id="selectLastNo" resultClass="int" parameterClass="int">
		SELECT max(no) as no FROM SHOWCASECOMMENT
	</select>
	
	
	<!-- insert 쿼리문 정의 -->
	<insert id="insertBoard" parameterClass="comment">
		INSERT INTO SHOWCASECOMMENT(COMMENT_NUM, SHOWBOARD_NUM, MEMBER_NUM, CONTENT, REG_DATE, RE_STEP, RE_LEVEL, REF)
		VALUES (COMMENT_NUM_SEQ.NEXTVAL, #showboard_num#, #member_num#, #content#, #reg_date#, #re_step#, #re_level#, COMMENT_NUM_SEQ.CURRVAL)
	</insert>
	
	<insert id="insertBoardReply" parameterClass="comment">
		INSERT INTO SHOWCASECOMMENT(COMMENT_NUM, SHOWBOARD_NUM, MEMBER_NUM, CONTENT, REG_DATE,  RE_STEP, RE_LEVEL, REF)
		VALUES (COMMENT_NUM_SEQ.NEXTVAL, #showboard_num#, #member_num#, #content#, #reg_date#, #re_step#, #re_level#, #ref#)
	</insert>

	<!-- update 쿼리문 정의 -->
	<update id="updateBoard" parameterClass="comment">
	UPDATE SHOWCASECOMMENT SET CONTENT = #content#
	<include refid = "where-num" />
	</update>

	
	<update id="updateReplyStep" parameterClass="comment">
		UPDATE SHOWCASECOMMENT SET re_step=re_step+1 WHERE ref=#ref# AND re_step>#re_step#
		
	</update>
	
	
	
	<!-- delete 쿼리문 정의 -->
	<delete id="deleteBoard" parameterClass="int">
		DELETE FROM SHOWCASECOMMENT
		<include refid="where-num" />
	</delete>


</sqlMap>




